  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper .blog_last_list .item img {
      max-width: 46%;
    }
  }
  home-blog .home-blog-wrapper .blog_last_list .item .content {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
