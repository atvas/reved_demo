    line-height: 1.25rem;
    --tw-text-opacity: 1;
    color: rgba(0, 0, 0, 1);
    color: rgba(0, 0, 0, var(--tw-text-opacity, 1));
    text-decoration-line: underline;
  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper .blog_last_list .item .content a {
