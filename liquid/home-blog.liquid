{% style %}
  /* 首页blog */
  home-blog {
    display: block;
    background-color: var(--bg-color);
    padding-top: var(--mob-padding-top);
    padding-bottom: var(--mob-padding-bottom);
  }
  @media (min-width: 768px) {
    home-blog {
      padding-top: var(--pc-padding-top);
      padding-bottom: var(--pc-padding-bottom);
    }
  }
  home-blog .heading {
    margin-bottom: 1.5rem;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  home-blog .heading .title {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 700;
  }
  @media (min-width: 768px) {
    home-blog .heading .title {
      font-size: 2.25rem;
      line-height: 2.5rem;
    }
  }
  home-blog .heading .view-all a {
    cursor: pointer;
    text-decoration-line: none;
  }
  home-blog .heading .view-all button {
    position: relative;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    cursor: pointer;
    align-items: center;
    gap: 0.5rem;
    border-top-left-radius: 0.25rem;
    border-bottom-left-radius: 0.25rem;
    border-width: 1px;
    --tw-border-opacity: 1;
    border-color: rgba(0, 0, 0, 1);
    border-color: rgba(0, 0, 0, var(--tw-border-opacity, 1));
    --tw-bg-opacity: 1;
    background-color: rgba(255, 255, 255, 1);
    background-color: rgba(255, 255, 255, var(--tw-bg-opacity, 1));
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    padding-left: 1rem;
    padding-right: 1rem;
    font-size: 1rem;
    line-height: 1.5rem;
    transition-duration: 100ms;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  @media (min-width: 768px) {
    home-blog .heading .view-all button {
      padding-top: 0.5rem;
      padding-bottom: 0.5rem;
      padding-left: 1.25rem;
      padding-right: 1.25rem;
    }
  }
  home-blog .heading .view-all button svg {
    width: 1rem;
    height: 1rem;
  }
  home-blog .home-blog-wrapper {
    display: grid;
    grid-gap: 0.75rem;
    gap: 0.75rem;
  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.5rem;
    }
  }
  home-blog .home-blog-wrapper .blog_first {
    position: relative;
    overflow: hidden;
    border-radius: 0.75rem;
  }
  home-blog .home-blog-wrapper .blog_first img {
    display: block;
    height: 100%;
    min-height: 360px;
    width: 100%;
    -o-object-fit: cover;
    object-fit: cover;
  }
  home-blog .home-blog-wrapper .blog_first .content {
    position: absolute;
    top: 0px;
    left: 0px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    justify-content: flex-end;
    gap: 1rem;
    padding: 5%;
    --tw-text-opacity: 1;
    color: rgba(255, 255, 255, 1);
    color: rgba(255, 255, 255, var(--tw-text-opacity, 1));
    background: -webkit-gradient(linear, left bottom, left top, from(rgba(0, 0, 0, 0.8)), to(rgba(0, 0, 0, 0)));
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0) 100%);
  }
  home-blog .home-blog-wrapper .blog_first .content .time {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  home-blog .home-blog-wrapper .blog_first .content .time svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: #fff;
  }
  home-blog .home-blog-wrapper .blog_first .content .title {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 700;
  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper .blog_first .content .title {
      font-size: 1.875rem;
      line-height: 2.25rem;
    }
  }
  home-blog .home-blog-wrapper .blog_first .content .desc {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    font-size: 0.875rem;
    line-height: 1.25rem;
  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper .blog_first .content .desc {
      font-size: 1rem;
      line-height: 1.5rem;
    }
  }
  home-blog .home-blog-wrapper .blog_first .content a {
    font-size: 0.875rem;
    line-height: 1.25rem;
    --tw-text-opacity: 1;
    color: rgba(255, 255, 255, 1);
    color: rgba(255, 255, 255, var(--tw-text-opacity, 1));
    text-decoration-line: underline;
  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper .blog_first .content a {
      font-size: 1rem;
      line-height: 1.5rem;
    }
  }
  home-blog .home-blog-wrapper .blog_last_list {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper .blog_last_list {
      gap: 1.5rem;
    }
  }
  home-blog .home-blog-wrapper .blog_last_list .item {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    gap: 0.5rem;
  }
  home-blog .home-blog-wrapper .blog_last_list .item img {
    display: block;
    height: auto;
    width: 100%;
    max-width: 50%;
    border-radius: 0.75rem;
    -o-object-fit: cover;
