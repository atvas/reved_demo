    line-height: 1.25rem;
  }
  @media (min-width: 768px) {
    home-blog .home-blog-wrapper .blog_last_list .item .content .time {
      font-size: 1rem;
      line-height: 1.5rem;
    }
  }
  home-blog .home-blog-wrapper .blog_last_list .item .content .time svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: #000;
  }
  home-blog .home-blog-wrapper .blog_last_list .item .content .title {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 700;
    line-height: 1.2;
  }
  @media (min-width: 768px) {
